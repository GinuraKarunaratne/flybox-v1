rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is the document owner
    function isDocumentOwner() {
      return isAuthenticated() && request.auth.uid == resource.data.userId;
    }

    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // Journeys collection - travelers offering luggage space
    match /journeys/{journeyId} {
      // Anyone authenticated can read active journeys
      allow read: if isAuthenticated();

      // Only journey owner can create
      allow create: if isAuthenticated() &&
                      request.resource.data.userId == request.auth.uid;

      // Only journey owner can update their journey
      allow update: if isDocumentOwner();

      // Only journey owner can delete their journey
      allow delete: if isDocumentOwner();
    }

    // Shipments collection - senders requesting package delivery
    match /shipments/{shipmentId} {
      // Users can read their own shipments
      allow read: if isAuthenticated() &&
                     (resource.data.userId == request.auth.uid ||
                      resource.data.selectedTraveler.userId == request.auth.uid);

      // Only authenticated users can create shipments
      allow create: if isAuthenticated() &&
                      request.resource.data.userId == request.auth.uid;

      // Only shipment owner can update
      allow update: if isDocumentOwner();

      // Only shipment owner can delete
      allow delete: if isDocumentOwner();
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // System can create notifications
      allow create: if isAuthenticated();

      // Users can update their own notifications (e.g., mark as read)
      allow update: if isDocumentOwner();

      // Users can delete their own notifications
      allow delete: if isDocumentOwner();
    }

    // Destinations collection - read-only for all authenticated users
    match /destinations/{destinationId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins via backend
    }

    // Travelers collection (if separate from journeys)
    match /travelers/{travelerId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
                      request.resource.data.userId == request.auth.uid;
      allow update: if isDocumentOwner();
      allow delete: if isDocumentOwner();
    }

    // Bookings collection - sender booking requests
    match /bookings/{bookingId} {
      // Users can read bookings they're involved in (sender or traveler)
      // Also allow the owner of the related journey to read bookings for that journey.
      // This covers the case where a booking is created by a sender and the journey
      // owner (traveler) needs to view all bookings for their journey even if
      // `travelerId` isn't set on the booking document yet.
      allow read: if isAuthenticated() && (
                     resource.data.senderId == request.auth.uid ||
                     resource.data.travelerId == request.auth.uid ||
                     (resource.data.journeyId != null &&
                      get(/databases/$(database)/documents/journeys/$(resource.data.journeyId)).data.userId == request.auth.uid)
                   );

      // Only authenticated users can create bookings
      allow create: if isAuthenticated() &&
                      request.resource.data.senderId == request.auth.uid;

      // Only sender or traveler can update booking
      allow update: if isAuthenticated() &&
                       (resource.data.senderId == request.auth.uid ||
                        resource.data.travelerId == request.auth.uid);

      // Only sender can delete their booking
      allow delete: if isAuthenticated() &&
                       resource.data.senderId == request.auth.uid;
    }
  }
}
